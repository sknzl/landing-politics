function renderPartyInfo(input) {
  const partyInfo = document.getElementById('party-info')
  partyInfo.innerHTML = input;
}

renderPartyInfo('<%= j render "party_info" %> \
    <% @parties.each do |party| %> \
      <%= j render "modal_politicians", party: party %> \
      <%= j render "modal_subordinates", party: party %> \
    <%end%>');

